<div class="page-header">
  <h1>Students</h1>
</div>

<p><%= link_to 'Add a New Student', new_student_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Image</th>
      <th>Email</th>
      <th>Cell phone</th>
      <th>Student</th>
      <!-- <th>Chore Type History</th> -->
      <th></th>
      <th></th>
    </tr>
  </thead>
<!-- Stopped trying to get this to work -->
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.full_name, chore_type_histories_url %></td>
        <td><%= student.address %></td>
        <td><%= image_tag student.image, width: 100 %></td>
        <td><%= student.email %></td>
        <td><%= student.cell_phone %></td>
        <td><%= student.student_id %></td>
        <td><%#= student.type_of_chores %>
          <%# ChoreTypeHistories.where(student_id: student.id) do
              chore_type_history.type_of_chore_id%>
          <%# end %>
        </td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, student_url(student), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_student_url(student), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, student_url(student), method: 'delete', data: { confirm: "Do you really want to delete this student?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

