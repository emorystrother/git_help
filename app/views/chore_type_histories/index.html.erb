<div class="page-header">
  <h1>Chore type histories</h1>
</div>

<p><%= link_to 'Add a New Chore Type History', new_chore_type_history_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Student</th>
      <th>Type of chore</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @chore_type_histories.each do |chore_type_history| %>
      <tr>
        <td><%= chore_type_history.student %></td>
        <td><%= chore_type_history.type_of_chore %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, chore_type_history_url(chore_type_history), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_chore_type_history_url(chore_type_history), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, chore_type_history_url(chore_type_history), method: 'delete', data: { confirm: "Do you really want to delete this chore_type_history?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

