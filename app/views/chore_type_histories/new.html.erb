<div class="page-header">
  <h1>New Chore Type History</h1>
</div>

<%= form_tag(chore_type_histories_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :student_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :student_id, options_from_collection_for_select(Student.all, :id, :full_name, nil), class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :type_of_chore_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :type_of_chore_id, options_from_collection_for_select(TypeOfChore.all, :id, :name, nil), class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Chore Type History", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
